@model IEnumerable<ProjetoAvonaleWeb.Models.Repo>

<h2>Meus Repositórios</h2>

<div class="form-group input-group">
    <form class="navbar-form">
        <input class="form-control" name="filtro" />
        <input class="btn btn-outline-dark" type="submit" id="btn_procura" value="Filtrar" />
    </form>
</div>
<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.name, "Detalhar", "Repos", new { filtro = item.name }, null)
                        </td>
                        <td>
                            @item.description
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
